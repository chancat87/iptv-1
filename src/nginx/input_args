NginxInputArgs()
{
    new_args=""
    while true 
    do
        Println "$tip 空字符用 '' 表示"
        inquirer text_input "输入单个指令值: " arg "$i18n_not_set"

        if [ "$arg" == "$i18n_not_set" ] 
        then
            break
        fi

        [ -n "$new_args" ] && new_args="$new_args,"

        if [ "$arg" == "''" ] 
        then
            arg=""
        else
            arg=${arg//\\/\\\\}
            arg=${arg//\"/\\\"}
        fi

        new_args="$new_args\"$arg\""

        echo
        inquirer list_input "继续添加指令值" ny_options yn_option
        if [ "$yn_option" == "$i18n_no" ] 
        then
            break
        fi
    done
}
